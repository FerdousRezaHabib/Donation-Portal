<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" styleClass="app-background " stylesheets="@styles/donor-registration.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.donation_application.controllers.DonorRegistrationController">

    <!-- Outer padding -->
    <padding><Insets bottom="32" left="32" right="32" top="32" /></padding>

    <!-- Top spacer -->
    <Region VBox.vgrow="ALWAYS" />

    <!-- Scrollable card container -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane-modern" vbarPolicy="AS_NEEDED">
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" maxWidth="600" spacing="18" styleClass="card">

                <!-- Heading -->
                <Label styleClass="title" text="Donor Registration" />
                <Label styleClass="subtitle" text="Join our community of supporters" />

                <!-- Form -->
                <VBox spacing="14" styleClass="spacing-medium">
                    <TextField fx:id="nameField" maxWidth="Infinity" prefHeight="45" promptText="Full Name" />
                    <TextField fx:id="emailField" maxWidth="Infinity" prefHeight="45" promptText="Email Address" />
                    <PasswordField fx:id="passwordField" maxWidth="Infinity" prefHeight="45" promptText="Password" />
                    <PasswordField fx:id="confirmPasswordField" maxWidth="Infinity" prefHeight="45" promptText="Confirm Password" />
                    <TextField fx:id="phoneField" maxWidth="Infinity" prefHeight="45" promptText="Phone Number" />
                    <TextField fx:id="organizationField" maxWidth="Infinity" prefHeight="45" promptText="Organization (Optional)" />

                    <!-- Picture upload -->
                    <VBox alignment="CENTER" spacing="8">
                        <Button fx:id="uploadPictureButton" maxWidth="Infinity" onAction="#handleUploadPicture" prefHeight="40" styleClass="button-secondary" text="Upload Picture" />
                        <ImageView fx:id="pictureImageView" fitHeight="110" fitWidth="110" preserveRatio="true" visible="false">
                            <effect><DropShadow /></effect>
                        </ImageView>
                    </VBox>
                </VBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="20" styleClass="spacing-small">
                    <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" prefHeight="45" text="Create Account" HBox.hgrow="ALWAYS" />
                    <Button fx:id="backButton" maxWidth="Infinity" onAction="#handleBackToLogin" prefHeight="45" styleClass="button-secondary" text="Back to Login" HBox.hgrow="ALWAYS" />
                </HBox>

            </VBox>
        </StackPane>
    </ScrollPane>

    <!-- Bottom spacer -->
    <Region VBox.vgrow="ALWAYS" />
</VBox>
